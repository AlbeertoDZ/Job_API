html
  head
    title Dashboard
    link(rel="stylesheet", href="/css/style.css")
  body
    include ./headerAdmin

    main
        h1 Panel de control

        if users.length === 0
            p No hay usuarios registrados

        else
            .users-container
                each user in users
                    .profile-container
                        img.profile-img(src=user.user_image || "/img/default-profile-img.jpg", alt="Foto de perfil")
                        p
                        strong Nombre: 
                        | #{user.name} #{user.surname}
                        p 
                        strong Nombre de usuario:
                        |  #{user.user_name}
                        p 
                        strong Email:
                        |  #{user.email}
                        p
                        strong Rol:
                        |  #{user.rol}
                        form 
                        button.button(type="submit") Editar usuario
                        button.button(type="submit") Eliminar usuario
    
    include ./footer